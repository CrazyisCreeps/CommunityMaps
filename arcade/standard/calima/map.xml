<map proto="1.4.2">
<name>Calima</name>
<version>1.0</version>
<unless variant="lifesteal">
    <objective>Get the highest amount of kills, or stand on the Emerald blocks at the center for 20 seconds to win!</objective>
</unless>
<if variant="lifesteal">
    <objective>Eliminate all players, or stand on the Emerald blocks at the center for 20 seconds to win! You get extra lives when you get kills!</objective>
</if>
<created>2024-01-24</created>
<maxbuildheight>84</maxbuildheight>
<include id="item-sumo"/>
<constants>
    <constant id="map-origin">0.5,0.5</constant>
    <constant id="item-spawn-point">0.5,64.25,0.5</constant>
    <constant id="void-plane">55</constant>
</constants>
<authors>
    <author uuid="9d4779a8-d35f-45d2-b51c-95de7a77e128"/> <!-- zzuf -->
</authors>
<players max="10" colors="true"/>
<spawns>
    <spawn kit="spawn-kit" spread="true">
        <regions angle="0.5,69,0.5">
            <!-- East -->
            <point>17.5,67,17.5</point>
            <point>22.5,68,7.5</point>
            <point>22.5,68,-7.5</point>
            <point>17.5,67,-17.5</point>
            <!-- West -->
            <point>-17.5,67,17.5</point>
            <point>-22.5,68,7.5</point>
            <point>-22.5,68,-7.5</point>
            <point>-17.5,67,-17.5</point>
            <!-- North -->
            <point>7.5,68,-22.5</point>
            <point>-7.5,68,-22.5</point>
            <!-- South -->
            <point>7.5,68,22.5</point>
            <point>-7.5,68,22.5</point>
        </regions>
    </spawn>
    <default>
        <region yaw="45">
            <cylinder base="44.5,91,-44.5" height="0" radius="2"/>
        </region>
    </default>
</spawns>
<filters>
    <material id="lamp">124</material>
</filters>
<regions>
    <complement id="playable-area">
        <circle center="${map-origin}" radius="35"/>
        <region id="spawn-areas"/>
    </complement>
    <cuboid id="center-region" min="-1,64,-1" max="1,65,1"/>
    <union id="spawn-areas">
        <cylinder base="17.5,67,17.5" height="2" radius="0.5"/>
        <cylinder base="22.5,68,7.5" height="2" radius="0.5"/>
        <cylinder base="22.5,68,-7.5" height="2" radius="0.5"/>
        <cylinder base="17.5,67,-17.5" height="2" radius="0.5"/>
        <cylinder base="-17.5,67,17.5" height="2" radius="0.5"/>
        <cylinder base="-22.5,68,7.5" height="2" radius="0.5"/>
        <cylinder base="-22.5,68,-7.5" height="2" radius="0.5"/>
        <cylinder base="-17.5,67,-17.5" height="2" radius="0.5"/>
        <cylinder base="7.5,68,-22.5" height="2" radius="0.5"/>
        <cylinder base="-7.5,68,-22.5" height="2" radius="0.5"/>
        <cylinder base="7.5,68,22.5" height="2" radius="0.5"/>
        <cylinder base="-7.5,68,22.5" height="2" radius="0.5"/>
    </union>
    <apply leave="never">
        <region>
            <negative>
                <circle center="44.5,-44.5" radius="14.5"/>
            </negative>
        </region>
    </apply>
    <apply block-physics="deny(lamp)"/>
</regions>
</map>
